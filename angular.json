{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "oblique-showcase": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "aot": true,
            "outputPath": "target",
            "index": "src/index.html",
            "main": "src/main.ts",
            "tsConfig": "src/tsconfig.app.json",
            "polyfills": "src/polyfills.ts",
            "preserveSymlinks": true,
            "assets": [
              {
                "glob": "**/*",
                "input": "src/assets",
                "output": "/assets"
              },
              {
                "glob": "**/*",
                "input": "projects/oblique/src/assets",
                "output": "/assets"
              },
              {
                "glob": "**/*",
                "input": "projects/oblique/src/styles/fonts",
                "output": "/assets/fonts"
              },
              {
                "glob": "**/*",
                "input": "dist/oblique/styles/css",
                "output": "/assets/css"
              },
              "src/Staticfile"
            ],
            "styles": [
              "projects/oblique/src/styles/scss/oblique-core.scss",
              "src/scss/styles.scss"
            ],
            "scripts": ["projects/oblique/src/ob-features.js"]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": false,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "progress": false,
              "baseHref": "."
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "oblique-showcase:build",
            "port": 3001,
            "sourceMap": true
          },
          "configurations": {
            "production": {
              "browserTarget": "oblique-showcase:build:prod",
              "aot": true,
              "optimization": true,
              "sourceMap": true
            }
          }
        },
        "test": {
          "builder": "@angular-builders/jest:run",
          "options": {
            "configPath": "../tests/jest.config.js",
            "watch": true,
            "verbose": true
          },
          "configurations": {
            "production": {
              "configPath": "../tests/jest.config.js",
              "watch": false,
              "verbose": false
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/tsconfig.app.json",
              "src/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "oblique": {
      "root": "projects/oblique",
      "sourceRoot": "projects/oblique/src",
      "projectType": "library",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/oblique/tsconfig.lib.json",
            "project": "projects/oblique/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-builders/jest:run",
          "options": {
            "configPath": "jest.config.js",
            "no-cache": true,
            "watch": true,
            "verbose": true
          },
          "configurations": {
            "production": {
              "watch": false,
              "verbose": false
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/oblique/tsconfig.lib.json",
              "projects/oblique/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "oblique-showcase",
  "schematics": {
    "@schematics/angular:component": {
      "skipTests": false,
      "inlineTemplate": false,
      "prefix": "ob",
      "style": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "ob"
    }
  }
}
